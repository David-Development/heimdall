# https://hub.docker.com/_/node/
FROM node:9-alpine
    
RUN npm install -g yarn

# Install Python2
RUN apk add --no-cache python \
    && python -m ensurepip \
    && rm -r /usr/lib/python*/ensurepip \
    && pip install --upgrade pip setuptools \
    && rm -r /root/.cache

